<div id="composeform">
    ***errorbox***
    <form action="***form_url***" method="post" enctype="multipart/form-data">
    <div id="article" class="shadowbox">
        <h2>{L_COMPOSE_ARTICLE}</h2>
        <div class="sbcontent">
            <dl class="input">
                <dt><label for="comp-title" class="required">{L_COMPOSE_TITLE}</label> <span class="extrainfo">{L_FORM_OPTIONAL}</span></dt>
                <dd><input class="fillwide" type="text" name="title" id="comp-title" size="100" maxlength="100" title="{L_COMPOSE_TITLE}" value="***title***" /></dd>
            </dl>
            <div class="textwrapper">
                <dl class="input">
                    <dt><label for="comp-summ">{L_COMPOSE_SUMMARY}</label> <span class="extrainfo">{L_COMPOSE_SUMM_INFO}</span></dt>
                    <dd><textarea class="fillwide lockwide" name="summary" id="comp-summ" rows="2" cols="80">***summary***</textarea></dd>
                </dl>
            </div>
            <div class="textwrapper">
                <dl class="input">
                    <dt><label for="comp-desc">{L_COMPOSE_DESC}</label></dt>
                    <dd><textarea name="description" id="comp-desc" rows="15" cols="80">***description***</textarea></dd>
                </dl>
            </div>
            <hr />
            <div class="submitbox">
                <input type="submit" class="button blue" value="{L_COMPOSE_SUBMIT}" name="compose" />
            </div>
        </div>
    </div>
    <div id="settings" class="shadowbox">
        <h2>{L_COMPOSE_SETTINGS}</h2>
        <div class="sbcontent">
            <dl class="input">
                <dt><label for="comp-site">{L_COMPOSE_SITE}</label></dt>
                <dd><select class="fillwide" id="comp-site" name="site">
                        ***allowed_sites***
                    </select>
                </dd>
            </dl>
            <div id="relmode-tabs">
                <ul class="tabs">
                    <li class="tab">{L_COMPOSE_NORMAL}</li>
                    <li class="tab">{L_COMPOSE_BATCH}</li>
                </ul>
                <div class="content">
                    <dl class="input">
                        <dt><label for="comp-level">{L_COMPOSE_LEVEL}</label></dt>
                        <dd><select class="fillwide" id="comp-level" name="level">
                                ***allowed_levels***
                            </select>
                        </dd>
                    </dl>
                    <dl class="input">
                        <dt><label for="comp-release">{L_COMPOSE_RELEASE}</label></dt>
                        <dd><select class="fillwide" id="comp-release" name="mode">
                                ***release_mode***
                            </select>
                        </dd>
                    </dl>
                    <dl class="input">
                        <dt><label for="release_date">{L_COMPOSE_RELDATE}</label></dt>
                        <dd><input class="fillwide datepick" type="text" name="release_date" id="release_date" size="16" maxlength="16" value="***release_date_fmt***" /></dd>
                    </dl>
                    <input type="hidden" name="rtimestamp" id="rtimestamp" value="***rtimestamp***" />
                </div>
                <div class="content">
                    <p>Batch release stuff goes here. This is pending.</p>
                </div>
                <input type="hidden" name="relmode" id="relmode" value="" />
            </div>
        </div>
    </div>
    <div id="settings" class="shadowbox">
        <h2>{L_COMPOSE_IMAGES}</h2>
        <div class="sbcontent">
            <dl class="input">
                <dt><label>{L_COMPOSE_IMAGEA}</label></dt>
                <dd><select name="imagea_mode" id="imagea_mode" class="fillwide">
***imageaopts***
                    </select>
                    <div class="subopt" id="imagea_mode_url"><input class="fillwide" type="text" name="imagea_url" id="imagea_url" size="32" value="***imagea_url***" /></div>
                    <div class="subopt" id="imagea_mode_file"><input class="fillwide" type="file" name="imagea_file" id="imagea_file" size="32" /></div>
                    <div class="subopt" id="imagea_mode_img"><select name="imagea_img" id="imagea_img" class="fancyselect">
***imageaimgs***
                            </select></div>
                </dd>
            </dl>
            <dl class="input">
                <dt><label>{L_COMPOSE_IMAGEB}</label></dt>
                <dd><select name="imageb_mode" id="imageb_mode" class="fillwide">
***imagebopts***
                    </select>
                    <div class="subopt" id="imageb_mode_url"><input class="fillwide" type="text" name="imageb_url" id="imageb_url" size="32" value="***imageb_url***" /></div>
                    <div class="subopt" id="imageb_mode_file"><input class="fillwide" type="file" name="imageb_file" id="imageb_file" size="32" /></div>
                    <div class="subopt" id="imageb_mode_img"><select name="imageb_img" id="imageb_img" class="fancyselect">
***imagebimgs***
                            </select></div>
                </dd>
            </dl>
        </div>
    </div>
</div>
<script type="text/javascript">
window.addEvent('domready', function() {
    CKEDITOR.replace('comp-desc', { customConfig: '{V_[commonpath]}cke_configs/basic_open.js' });

    var settingPane = new TabPane('relmode-tabs', {onChange: function(select) { $('relmode').set('value', select); } });

    $$('select.fancyselect').fancySelect({showText: false, autoHide: true});
});
</script>
