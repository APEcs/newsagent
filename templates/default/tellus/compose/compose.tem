<script type="text/javascript">
window.addEvent('domready', function() {
    CKEDITOR.replace('tell-desc', { customConfig: '{V_[commonpath]}cke_configs/***ckeconfig***' });
});
</script>
<div id="tellusform">
    ***errorbox***
    <form action="***form_url***" method="post" enctype="multipart/form-data">
    <div id="tellus-article" class="shadowbox">
        <h2>{L_TELLUS_ARTICLE}</h2>
        <div class="sbcontent">
            {L_TELLUS_FORM_INTRO}
            <div class="textwrapper">
                <dl class="input">
                    <dt><label for="tell-desc">{L_TELLUS_DESC}</label></dt>
                    <dd><textarea name="article" id="tell-desc" rows="15" cols="80">***article***</textarea></dd>
                </dl>
            </div>
            <div class="textwrapper">
                <dl class="input iblock">
                    <dt><label for="tell-type">{L_TELLUS_TYPE}</label></dt>
                    <dd><select name="type" id="tell-type" class="tellus-dropdown">
                        ***typeopts***
                        </select>
                    </dd>
                </dl>
                <dl class="input iblock">
                    <dt><label for="tell-queue">{L_TELLUS_QUEUE}</label></dt>
                    <dd><select name="queue" id="tell-queue" class="tellus-dropdown">
                        ***queueopts***
                        </select>
                    </dd>
                </dl>
            </div>
            <hr />
            <div class="submitbox">
                <input type="submit" class="button blue" name="newarticle" id="submitarticle" value="{L_TELLUS_SUBMIT}" />
            </div>
        </div>
    </div>
    </form>
</div>
